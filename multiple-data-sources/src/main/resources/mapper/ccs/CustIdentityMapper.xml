<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinaums.datarepair.mapper.ccs.CustIdentityMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.piter.multipledatasources.entity.CustIdentity">
        <id column="ID" property="id" />
        <result column="CUST_NO" property="custNo" />
        <result column="NAME" property="name" />
        <result column="ID_CARD" property="idCard" />
        <result column="ID_CARD_FUZZY" property="idCardFuzzy" />
        <result column="ISSU_ORG" property="issuOrg" />
        <result column="VALID_BEGIN" property="validBegin" />
        <result column="VALID_END" property="validEnd" />
        <result column="SEX" property="sex" />
        <result column="BIRTHDAY" property="birthday" />
        <result column="NATION" property="nation" />
        <result column="ADDRESS" property="address" />
        <result column="FRONT_FILE_ID" property="frontFileId" />
        <result column="BACK_FILE_ID" property="backFileId" />
        <result column="CREATE_BY" property="createBy" />
        <result column="CREATE_TIME" property="createTime" />
        <result column="UPDATE_BY" property="updateBy" />
        <result column="UPDATE_TIME" property="updateTime" />
        <result column="NAME_FUZZY" property="nameFuzzy" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        ID, CUST_NO, NAME, ID_CARD, ID_CARD_FUZZY, ISSU_ORG, VALID_BEGIN, VALID_END, SEX, BIRTHDAY, NATION, ADDRESS, FRONT_FILE_ID, BACK_FILE_ID, CREATE_BY, CREATE_TIME, UPDATE_BY, UPDATE_TIME, NAME_FUZZY
    </sql>

    <select id="selectLowerIdCard" resultType="com.chinaums.datarepair.entity.CustIdentity">
        select
        <include refid="Base_Column_List" />
        from
        cust_identity ci
        where substr(ci.id_card_fuzzy,-1,1) = 'x'
    </select>

</mapper>
